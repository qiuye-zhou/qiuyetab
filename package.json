    "lodash-es": "^4.17.21",
    "motion-v": "^1.1.1",
    "ofetch": "^1.4.1",
    "pinia": "^3.0.3",
    "reka-ui": "^2.3.0",
    "seemly": "^0.3.10",
    "swiper": "^11.2.8",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.7",
    "uuid": "^11.1.0",
    "vue": "^3.5.13",
    "vue-draggable-next": "^2.2.1",
    "vue-sonner": "^2.0.1"
