{
  "name": "qiuyetab",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "lint": "eslint --fix .",
    "preview": "vite preview",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,vue,json,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,vue,json,css,md}"
  },
  "dependencies": {
    "pinia": "^3.0.3",
    "tailwindcss": "^4.1.16",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@iconify/vue": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.0",
    "@tailwindcss/vite": "^4.1.16",
    "@types/webextension-polyfill": "^0.12.4",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "chokidar": "^4.0.3",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-qiuye": "^0.0.7",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.5.1",
    "esno": "^4.8.0",
    "fs-extra": "^11.3.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "kolorist": "^1.8.0",
    "lint-staged": "^16.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "rimraf": "^6.1.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "unplugin-auto-import": "^20.2.0",
    "vite": "^7.1.12",
    "webextension-polyfill": "^0.12.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
