{
  "name": "qiuyetab",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "lint": "eslint --fix .",
    "preview": "vite preview",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,vue,json,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,vue,json,css,md}"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@tailwindcss/vite": "^4.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dexie": "^4.2.0",
    "file-saver": "^2.0.5",
    "lodash-es": "^4.17.21",
    "motion-v": "^1.7.2",
    "ofetch": "^1.4.1",
    "pinia": "^3.0.3",
    "reka-ui": "^2.5.1",
    "seemly": "^0.3.10",
    "swiper": "^11.2.10",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "uuid": "^11.1.0",
    "vue": "^3.5.22",
    "vue-draggable-next": "^2.3.0",
    "vue-sonner": "^2.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@iconify/vue": "^5.0.0",
    "@types/file-saver": "^2.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.18.6",
    "@types/webextension-polyfill": "^0.12.3",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/tsconfig": "^0.7.0",
    "chokidar": "^4.0.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-qiuye": "^0.0.7",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.5.0",
    "esno": "^4.8.0",
    "fs-extra": "^11.3.2",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "kolorist": "^1.8.0",
    "lint-staged": "^16.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.1",
    "unplugin-auto-import": "^19.3.0",
    "vite": "^6.3.6",
    "vue-tsc": "^2.2.12",
    "web-ext": "^8.10.0",
    "webextension-polyfill": "^0.12.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
