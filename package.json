    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/tsconfig": "^0.7.0",
    "chokidar": "^4.0.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^9.27.0",
    "eslint-plugin-vue": "^10.1.0",
    "esno": "^4.8.0",
    "fs-extra": "^11.3.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "kolorist": "^1.8.0",
